# Shell configuration.
if [ -f "$HOME/.zsh-env-config" ]; then
    source $HOME/.zsh-env-config
fi

# oh-my-zsh config.
plugins=(git zsh-autosuggestions)
ZSH_THEME="fishier"
export ZSH=$HOME/.oh-my-zsh
source $ZSH/oh-my-zsh.sh

# Configure go.
export GOPATH="$HOME/code/go"
export PATH="$PATH:$GOPATH/bin"

